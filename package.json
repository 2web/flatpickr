{
  "name": "flatpickr",
  "version": "4.4.0",
  "description": "A lightweight, powerful javascript datetime picker",
  "scripts": {
    "build": "NODE_ENV=production webpack --config build/webpack.config.ts && ./emitDeclarations.sh",
    "start": "run-p start:*",
    "start:webpack": "watch=true webpack --config build/webpack.config.ts",
    "start:serve": "hs ./ -s -o",
    "test": "run-s test:typecheck test:unit",
    "test:typecheck": "tsc -p ./src --noEmit",
    "test:unit": "jest --config .jest.json",
    "coveralls": "jest --config .jest.json --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build && npm test"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.42",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.42",
    "@babel/plugin-proposal-optional-catch-binding": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "@types/clean-webpack-plugin": "^0.1.2",
    "@types/extract-text-webpack-plugin": "^3.0.2",
    "@types/glob": "^5.0.35",
    "@types/jest": "^22.2.0",
    "@types/jquery": "^3.3.1",
    "@types/node": "^9.4.7",
    "@types/webpack": "^4.1.1",
    "autoprefixer": "^8.1.0",
    "babel-loader": "^8.0.0-beta.2",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "coveralls": "^3.0.0",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "glob": "^7.1.2",
    "http-server": "^0.11.1",
    "husky": "^0.14.3",
    "jest": "22.4.3",
    "lint-staged": "^7.0.0",
    "npm-run-all": "^4.1.1",
    "postcss-loader": "^2.1.3",
    "prettier": "^1.11.1",
    "style-loader": "^0.20.3",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "ts-jest": "22.4.2",
    "ts-loader": "^4.1.0",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.12",
    "webpack-livereload-plugin": "^2.1.1"
  },
  "main": "dist/flatpickr.js",
  "style": "dist/flatpickr.css",
  "types": "./dist/typings.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chmln/flatpickr.git"
  },
  "author": "Gregory <gregory.mkv@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chmln/flatpickr/issues"
  },
  "homepage": "https://flatpickr.js.org",
  "keywords": [
    "javascript",
    "datetimepicker",
    "calendar",
    "date",
    "time",
    "picker",
    "lightweight"
  ],
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --trailing-comma es5 --write",
      "git add"
    ]
  }
}
